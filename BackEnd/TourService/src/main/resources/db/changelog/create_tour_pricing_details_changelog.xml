<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!-- ChangeSet để tạo bảng tour_pricing_detail -->
    <changeSet id="create-tour_pricing_detail" author="NguyenVanLoc2002">
        <createTable tableName="tour_pricing_detail">
            <column name="tour_price_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="tour_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="age_group" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(20, 0)">
                <constraints nullable="false"/>
            </column>
            <column name="surcharge_type" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="surcharge_amount" type="DECIMAL(20, 0)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <!-- Nếu có bảng tours và muốn tạo khóa ngoại cho tourId -->
        <addForeignKeyConstraint baseTableName="tour_pricing_detail"
                                 baseColumnNames="tour_id"
                                 referencedTableName="tours"
                                 referencedColumnNames="tour_id"
                                 constraintName="fk_tour_pricing_detail_tours"/>
    </changeSet>

</databaseChangeLog>